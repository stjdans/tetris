<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tetris"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="tetris"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.tetris.activity.MainActivity"
            android:label="tetris">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tetris.activity.SecondActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity android:name="com.example.tetris.activity.ConfigActivity"></activity>
        <activity android:name="com.example.tetris.activity.ResultActivity"></activity>
        <activity android:name="com.example.tetris.activity.FightActivity"></activity>
    </application>


</manifest>
